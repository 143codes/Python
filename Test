III
num1 = float(input('Enter num 1: '))
num2 = float(input('Enter num 2: '))
a = num1 + num2
b = num1 - num2
c = num1 * num2
d = num1 / num2
e = num1 % num2
f = num1 ** num2
g = num2 ** num1
print ("Събиране", a)
print ('Изваждане', b)
print ('Умножение', c)
print ('Делене', d)
print ('Остатък', e)
print ('Степенуван num1', f)
print ('Степенуван num2', g)

