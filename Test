XIII
def repeat_text(text, n):
    for i in range(n):
        print(text)
a = input('Enter text: ')
repeat_text(a, 10)

XIV
def sum_nums (a, b, c, d, e, f):
    return a + b + c + d + e + f
a = int(input('Enter num 1: '))
b = int(input('Enter num 2: '))
c = int(input('Enter num 3: '))
d = int(input('Enter num 4: '))
e = int(input('Enter num 5: '))
f = int(input('Enter num 6: '))
p = sum_nums (a, b, c, d, e, f)
print (p)

XV
import math
def avg_nums(uktc):
    sum = 0
    for n in uktc:
        sum = sum + n
    avg = sum / len (uktc)
    return avg
ocenki = [5, 5, 4, 2, 6, 3]
gp4eProg = [2, 3, 2, 2, 2]
gp4e = avg_nums(gp4eProg)
d = avg_nums(ocenki)
print (d)
v = avg_nums(gp4eProg)
print (v)
