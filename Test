VII
print ("------------------------")
print ('For')
print ("------------------------")
#a
for a in range (0, 21, 1):
    print(a)

print ("------------------------")
#b
for b in range (0, 101, 5):
    print(b)
print ("------------------------")
#c
for c in range (-101, 101, 10):
    print(c)
print ("------------------------")
#d
for d in range (1000, 0, -100):
    print(d)
print ("------------------------")
#e
for e in range (500, 100, -20):
    print(e)
print ("------------------------")
#f
for f in range (200, 701, 100):
    print(f)
print ("------------------------")
print('While')
print ("------------------------")
#a
n = 0
while n <21:
    print(n)
    n = n+1
print ("------------------------")
#b
n = 0
while n <101:
    print(n)
    n = n+5
print ("------------------------")
#c
n = -100
while n <101:
    print(n)
    n = n+10
print ("------------------------")
#d
n = 1000
while n < 0:
    print(n)
n = n-100
print ("------------------------")
#e
n = 500
while n <100:
    print(n)
    n = n-20
print ("------------------------")
#f
n = 200
while n <701:
    print(n)
    n = n+100
print ("------------------------")
print ("------------------------")

VIII
import math
def avg_nums(grades):
    sum = 0

    for n in grades:
        sum = sum + n
    avg = sum / len (grades)
    return avg
grades = [6, 5.5, 3, 5, 6, 4.2, 4]
grades[2] = 4.5
grades.insert(7, 4)
print ('Оценки: ', grades)
grades.sort()
print ('Във възходящ ред: ', grades)
grades.reverse()
print ('В низходящ ред: ', grades)
d = avg_nums(grades)
print ('Средно аритметично: ', d)

